<Window x:Class="EventManagerJH.Views.BoodschappenLijstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boodschappenlijst" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Boodschappenlijst" FontWeight="Bold" FontSize="16" Margin="10"/>
            <!-- ListBox om de boodschappen weer te geven -->
            <ListBox ItemsSource="{Binding BoodschappenLijst}" Height="200" Margin="10"/>

            <!-- TextBox om nieuwe boodschappen toe te voegen -->
            <TextBox x:Name="NieuweBoodschapTextBox" Width="300" Margin="10"/>

            <!-- Knop om een nieuwe boodschap toe te voegen -->
            <Button Content="Item Toevoegen" Width="100" Margin="10" Click="ToevoegenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
