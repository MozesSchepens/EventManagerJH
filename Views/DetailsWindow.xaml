<Window x:Class="EventManagerJH.Views.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evenement Details" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Titel:" FontWeight="Bold" />
            <TextBlock Text="{Binding Titel}" />

            <TextBlock Text="Datum:" FontWeight="Bold" Margin="0,10,0,0" />
            <TextBlock Text="{Binding Datum, StringFormat='{}{0:dd/MM/yyyy}'}" />

            <TextBlock Text="Locatie:" FontWeight="Bold" Margin="0,10,0,0" />
            <TextBlock Text="{Binding Locatie}" />

            <TextBlock Text="Beschrijving:" FontWeight="Bold" Margin="0,10,0,0" />
            <TextBlock TextWrapping="Wrap" Text="{Binding Beschrijving}" />
        </StackPanel>
    </Grid>
</Window>
