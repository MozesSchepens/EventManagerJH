<Window x:Class="EventManagerJH.Views.ToDoLijstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do Lijst" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="To-Do Lijst" FontWeight="Bold" FontSize="16" Margin="10"/>
            <ListBox ItemsSource="{Binding ToDoLijst}" Height="200" Margin="10"/>
            <TextBox x:Name="NieuwToDoTextBox" Width="300" Margin="10"/>
            <Button Content="Item Toevoegen" Width="100" Margin="10" Click="ToevoegenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
