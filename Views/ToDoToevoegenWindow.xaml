<Window x:Class="EventManagerJH.Views.ToDoToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDo Toevoegen" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Beschrijving van ToDo:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox x:Name="BeschrijvingTextBox" Grid.Row="1" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="2">
            <Button Content="Opslaan" Width="80" Margin="5" Click="Opslaan_Click"/>
            <Button Content="Annuleren" Width="80" Margin="5" Click="Annuleren_Click"/>
        </StackPanel>
    </Grid>
</Window>
